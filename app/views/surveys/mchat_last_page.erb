<header>
  <div class="name middle-header"><%= "#{patient.first_name.upcase} #{patient.last_name.upcase}" %></div>
  <div class="spacer" style="clear: both;"></div>
</header>

<div class="middle-pages">
  <table class="vaccines">
    <tr>
      <th class="title-left">Question</th>
      <th class="title-right">Answer</th>
    </tr>
    <% records.each_with_index do |question, idx|%>
        <tr>
          <td class="vaccines-left"><%= idx + start + 1 %>. <%= question.body %></td>
          <% if answer = answers.find_by(question_id: question.id) %>
              <td class="vaccines-right"><%= answer.text %></td>
          <% end %>
        </tr>
        <tr>
          <td class="vaccines-left-second"><%=question.secondary%></td>
        </tr>
    <%end%>
  </table>
</div>

<footer>
  <img class="left" src=<%= WickedPdfHelper.root_path.join('public', 'images', 'full-leo.png') %>>
  <div class="right"><%= count %></div>
  <div class="middle">Generated on <%= Time.now.strftime("%m/%d/%Y")%></div>
</footer>
